<div class="form">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    
    {# Titre de l'annonce #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.title, "Titre de l'annonce") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.title, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.title) }}
    
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.categories, "Catégories") }}
        </div>
        <div class="form-field" style="margin-top:4px;">
            {{ form_widget(form.categories, {'attr': {'class': 'form-check-boxes'}}) }}
        </div>
    </div>
    {{ form_errors(form.categories) }}
    
    <br>
    
    {# Date à venir #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.toComeUp, "Date à venir") }}
        </div>
        <div class="form-field" style="margin-top:5px;">
            {{ form_widget(form.toComeUp) }}
        </div>
    </div>
    {{ form_errors(form.toComeUp) }}
    
    {# Date de début #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.dateStart, "Date de début") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.dateStart) }}
        </div>
    </div>
    {{ form_errors(form.dateStart) }}
    
    {# Date de fin #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.dateEnd, "Date de fin") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.dateEnd) }}
        </div>
    </div>
    {{ form_errors(form.dateEnd) }}
    
    {# Heure de début #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.timeStart, "Heure de début") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.timeStart) }}
        </div>
    </div>
    {{ form_errors(form.timeStart) }}
    
    {# Heure de fin #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.timeEnd, "Heure de fin") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.timeEnd) }}
        </div>
    </div>
    {{ form_errors(form.timeEnd) }}
    
    {# Complément de date #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.dateComplement, "Complément de date") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.dateComplement, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.dateComplement) }}
    
    <br>
    
    {# Contenu #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.content, "Contenu") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.content, {'attr': {'class': 'form-widget text-area'}}) }}
        </div>
    </div>
    {{ form_errors(form.content) }}
    
    {# Lien #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.link, "Lien") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.link, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.link) }}
    
    {# Tarif #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.tariff, "Prix (€)") }}
        </div>
        <div class="form-field" style="width:50px;">
            {{ form_widget(form.tariff, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.tariff) }}
    
    {# Téléphone #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.phoneNumber, "Téléphone") }}
        </div>
        <div class="form-field" style="width:150px;">
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.phoneNumber) }}
    
    <br>
    
    {# Adresse #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.isAtWork, "Adresse de travail") }}
        </div>
        <div class="form-field" style="margin-top:5px;">
            {{ form_widget(form.isAtWork) }}
        </div>
    </div>
    {{ form_errors(form.isAtWork) }}
    
    <br>
    
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.address, "Autre adresse") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.address.address, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.address) }}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.addressComplement, "Complément d'aresse") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.address.addressComplement, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.addressComplement) }}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.postalCode, "Code postal") }}
        </div>
        <div class="form-field" style="width:100px;">
            {{ form_widget(form.address.postalCode, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.postalCode) }}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.city, "Ville") }}
        </div>
        <div class="form-field" style="width:200px;">
            {{ form_widget(form.address.city, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.city) }}
    
    <br>
    
    {# Image #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.image.file, "Image") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.image.file) }}
        </div>
    </div>
    {{ form_errors(form.image.file) }}
    
    <br>
    
    {# Sauvegarder #}
    <div class="center">
        <a href="{{ path('website_homepage') }}#actualites" class="btn-cancel">
            Annuler
        </a>
        {{ form_widget(form.save, {'attr': {'class': 'btn-submit'}, 'label': 'Envoyer'}) }}
    </div>
    
    {{ form_rest(form) }}
    {{ form_end(form) }}
    
</div>