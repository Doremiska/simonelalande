<div class="form">
    
    {{ form_start(form) }}
    
    {% if form_errors(form.title) is not empty or
        form_errors(form.categories) is not empty or
        form_errors(form.toComeUp) is not empty or
        form_errors(form.dateStart) is not empty or
        form_errors(form.dateEnd) is not empty or
        form_errors(form.timeStart) is not empty or
        form_errors(form.timeEnd) is not empty or
        form_errors(form.dateComplement) is not empty or
        form_errors(form.content) is not empty or
        form_errors(form.link) is not empty or
        form_errors(form.tariff) is not empty or
        form_errors(form.tariffReservation) is not empty or
        form_errors(form.phoneNumber) is not empty or
        form_errors(form.animatedBy) is not empty or
        form_errors(form.fonction) is not empty or
        form_errors(form.isAtWork) is not empty or
        form_errors(form.address.address) is not empty or
        form_errors(form.address.city) is not empty or
        form_errors(form.address.addressComplement) is not empty or
        form_errors(form.address.postalCode) is not empty or
        form_errors(form.image.file) is not empty
    %}
        <div class="alert alert-danger" style="margin:-30px 0 30px 0;">
            <strong>Erreur ! </strong>Un champ du formulaire n'est pas valide.
        </div>
    {% endif %}
    
    {{ form_errors(form) }}
    
    {# Titre de l'annonce #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.title, "Titre de l'annonce") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.title, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.title) }}
    
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.categories, "Catégories") }}
        </div>
        <div class="form-field" style="margin-top:4px;">
            {{ form_widget(form.categories, {'attr': {'class': 'form-check-boxes'}}) }}
        </div>
    </div>
    {{ form_errors(form.categories) }}
    
    <br>
    
    {# Date à venir #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.toComeUp, "Date à venir") }}
        </div>
        <div class="form-field" style="margin-top:5px;">
            {{ form_widget(form.toComeUp) }}
        </div>
    </div>
    {{ form_errors(form.toComeUp) }}
    
    {# Date de début #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.dateStart, "Date de début") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.dateStart) }}
        </div>
    </div>
    {{ form_errors(form.dateStart) }}
    
    {# Date de fin #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.dateEnd, "Date de fin") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.dateEnd) }}
        </div>
    </div>
    {{ form_errors(form.dateEnd) }}
    
    {# Heure de début #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.timeStart, "Heure de début") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.timeStart) }}
        </div>
    </div>
    {{ form_errors(form.timeStart) }}
    
    {# Heure de fin #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.timeEnd, "Heure de fin") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.timeEnd) }}
        </div>
    </div>
    {{ form_errors(form.timeEnd) }}
    
    {# Complément de date #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.dateComplement, "Complément de date") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.dateComplement, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.dateComplement) }}
    
    <br>
    
    {# Contenu #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.content, "Contenu") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.content, {'attr': {'class': 'form-widget text-area'}}) }}
        </div>
    </div>
    {{ form_errors(form.content) }}
    
    {# Lien #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.link, "Lien") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.link, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.link) }}
    
    <br>
    
    {# Tarif #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.tariff, "Prix (€)") }}
        </div>
        <div class="form-field" style="width:60px;">
            {{ form_widget(form.tariff, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.tariff) }}
    
    {# Tarif de réservation #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.tariffReservation, "Prix de réservation (€)") }}
        </div>
        <div class="form-field" style="width:60px;">
            {{ form_widget(form.tariffReservation, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.tariffReservation) }}
    
    <br>
    
    {# Téléphone #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.phoneNumber, "Téléphone") }}
        </div>
        <div class="form-field" style="width:150px;">
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.phoneNumber) }}
    
    <br>
    
    {# Animé par #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.animatedBy, "Animé par") }}
        </div>
        <div class="form-field" style="width:200px;">
            {{ form_widget(form.animatedBy, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.animatedBy) }}
    
    {# Fonction #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.fonction, "Fonction") }}
        </div>
        <div class="form-field" style="width:200px;">
            {{ form_widget(form.fonction, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.fonction) }}
    
    <br>
    
    {# Adresse #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.isAtWork, "Adresse de travail") }}
        </div>
        <div class="form-field" style="margin-top:5px;">
            {{ form_widget(form.isAtWork) }}
        </div>
    </div>
    {{ form_errors(form.isAtWork) }}
    
    <br>
    
    {# Autre adresse #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.address, "Autre adresse") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.address.address, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.address) }}
    
    {# Complément d'adresse #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.addressComplement, "Complément d'aresse") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.address.addressComplement, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.addressComplement) }}
    
    {# Code Postal #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.postalCode, "Code postal") }}
        </div>
        <div class="form-field" style="width:100px;">
            {{ form_widget(form.address.postalCode, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.postalCode) }}
    
    {# Ville #}
    <div class="form-group">
        <div class="form-label">
            {{ form_label(form.address.city, "Ville") }}
        </div>
        <div class="form-field" style="width:200px;">
            {{ form_widget(form.address.city, {'attr': {'class': 'form-widget'}}) }}
        </div>
    </div>
    {{ form_errors(form.address.city) }}
    
    <br>
    
    {# Image #}
    <div class="form-group">
        <div class="form-label bold">
            {{ form_label(form.image.file, "Image (130x180)") }}
        </div>
        <div class="form-field">
            {{ form_widget(form.image.file) }}
        </div>
    </div>
    {{ form_errors(form.image.file) }}
    
    <br>
    
    {# Sauvegarder #}
    <div class="center">
        <a href="{{ path('website_homepage') }}#actualites" class="btn-cancel">
            Annuler
        </a>
        {{ form_widget(form.save, {'attr': {'class': 'btn-submit'}, 'label': 'Envoyer'}) }}
    </div>
    
    {{ form_rest(form) }}
    {{ form_end(form) }}
    
</div>
